</head>
<body>
    <header>
        <div class="logo">
            <img src="/img/logo.png" alt="Logo">
        </div>
        <nav>
            <nav>
                <a href="/homepage">Beranda</a>
                <a href="/category">Kategori</a>
                <a href="/schedulefut">Jadwal</a>
                <a href="/logout">LogOut</a>
            </nav>
    </header>
    
    <div id="mainsource">
        <div class="cat-egory"><span>Kategori</span></div>
        <div class="boxes">
            <div class="box" data-bg="url('icons/Soccer.webp')">
                <a href="/soon" class="category"> 
                    <i class="fas fa-futbol"></i>
                    <span>Futsal</span>
                </a>
            </div>          
            <div class="box" data-bg="url('gambar_basket.jpg')">
                <a href="/basket" class="category">
