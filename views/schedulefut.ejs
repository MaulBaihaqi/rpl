<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@600&display=swap" rel="stylesheet">
    <title>Jadwal Pertandingan Olahraga</title>
    <link rel="icon" href= "/img/Logo.png" type="image/x-icon"/>
    <link rel="stylesheet" href="/style/schedule.css">
</head>
<body>

    <header>
        <div class="logo">
            <img src="/img/logo.png" alt="Logo">
        </div>
        <nav>
            <nav>
                <a href="/homepage">Beranda</a>
                <a href="/category">Kategori</a>
                <a href="/schedulefut">Jadwal</a>
                <a href="/logout">LogOut</a>
            </nav>
    </header>

    <main>
        <section class="sports-schedule">
            <h2>Jadwal Pertandingan Futsal</h2>
            <div class="match-list">
                <!-- Sample, (hanya untuk DEMO) -->
                <div class="match">
                    <div class="match-name">ISC 2024 Futsal</div>
                    <div class="match-teams">
                        <div class="team">58</div>
                        <span class="vs">VS</span>
                        <div class="team">60</div>
                    </div>
                    <button class="detail-button">Detail Pertandingan</button>
                </div>
                <div class="match">
                    <div class="match-name">ISC 2024 FUTSAL</div>
                    <div class="match-teams">
                        <div class="team">57</div>
                        <span class="vs">VS</span>
                        <div class="team">59</div>
                    </div>
                    <button class="detail-button">Detail Pertandingan</button>
                </div>
            </div>
        </section>

        <section class="sports-schedule">
            <h2>Jadwal Pertandingan Basket</h2>
            <div class="match-list">
                <% baskets.forEach(basket => { %>
                    <div class="match">
                        <div class="match-name"><%= basket.name %></div>
                        <div class="match-teams">
                            <div class="team"><%= basket.team_a_name %></div>
                            <span class="vs">VS</span>
                            <div class="team"><%= basket.team_b_name %></div>
                        </div>
                        <a href="/basket_detail/<%= basket.id %>">
                            <button class="detail-button">Detail Pertandingan</button>
                        </a>
                    </div>
                <% }) %>
            </div>
        </section>

        <section class="sports-schedule">
            <h2>Jadwal Pertandingan Badminton</h2>
            <div class="match-list">
                <% badmins.forEach(badmin => { %>
                    <div class="match">
                        <div class="match-name"><%= badmin.name %></div>
                        <div class="match-teams">
                            <div class="team"><%= badmin.team_a %></div>
                            <span class="vs">VS</span>
                            <div class="team"><%= badmin.team_b %></div>
                        </div>
                        <a href="/badmin_detail">
                            <button class="detail-button">Detail Pertandingan</button>
                        </a>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

</body>
</html>
